<Window x:Class="EmployeeManagement.UI.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:EmployeeManagement.UI"
        mc:Ignorable="d"
        Title="Employee Management - Đăng nhập" 
        Height="350" Width="500"
        WindowStartupLocation="CenterScreen"
        WindowStyle="SingleBorderWindow"
        ResizeMode="NoResize"
        Background="#F0F0F0">
    <Grid>
        <Border VerticalAlignment="Center" 
                HorizontalAlignment="Center"
                Width="350"
                Background="White"
                CornerRadius="10"
                BorderBrush="#CCCCCC"
                BorderThickness="1">

            <Border.Effect>
                <DropShadowEffect ShadowDepth="2" BlurRadius="10" Color="#AAAAAA" Opacity="0.5"/>
            </Border.Effect>

            <StackPanel Margin="30">
                <TextBlock Text="ĐĂNG NHẬP" 
                           FontSize="24" 
                           FontWeight="Bold" 
                           HorizontalAlignment="Center"
                           Margin="0,0,0,25"
                           Foreground="#333333"/>

                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <TextBlock Text="Tài khoản:" 
                               Grid.Row="0" Grid.Column="0"
                               VerticalAlignment="Center"
                               Margin="0,0,10,0"/>
                    <TextBox x:Name="txtUsername" 
                             Grid.Row="0" Grid.Column="1"
                             Margin="0,5,0,5"
                             Padding="5"
                             VerticalContentAlignment="Center"
                             Height="30"/>

                    <TextBlock Text="Mật khẩu:" 
                               Grid.Row="1" Grid.Column="0"
                               VerticalAlignment="Center"
                               Margin="0,10,10,0"/>
                    <PasswordBox x:Name="pbPassword" 
                                 Grid.Row="1" Grid.Column="1"
                                 Margin="0,15,0,5"
                                 Padding="5"
                                 VerticalContentAlignment="Center"
                                 Height="30"/>
                </Grid>

                <StackPanel Orientation="Horizontal" 
                            HorizontalAlignment="Right" 
                            Margin="0,25,0,0">

                   

                    <Button x:Name="btnLogin" 
                            Content="Đăng nhập" 
                            Width="100"
                            IsDefault="True"
                            Click="btnLogin_Click"
                            Background="#007ACC"
                            Foreground="White"
                            FontWeight="Bold"/>
                </StackPanel>

            </StackPanel>
        </Border>
    </Grid>
</Window>